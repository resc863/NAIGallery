<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="NAIGallery.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:NAIGallery.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Keep only non-string shared resources -->
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <FontFamily x:Key="AppFontFamily">Segoe UI Variable, Segoe UI, Malgun Gothic, "Noto Sans CJK KR", "Noto Sans KR", Arial Unicode MS</FontFamily>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
            </Style>
            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
            </Style>

            <!-- Make NavigationView use transparent backgrounds so Mica shows through -->
            <SolidColorBrush x:Key="NavigationViewBackground" Color="Transparent" />
            <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="Transparent" />
            <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="Transparent" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
