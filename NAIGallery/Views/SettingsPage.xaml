<Page
    x:Class="NAIGallery.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
    <ScrollViewer>
        <StackPanel Padding="16" Spacing="12">
            <TextBlock Text="설정" FontSize="28" FontWeight="Bold" />
            <TextBlock Text="검색 옵션" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <CheckBox x:Name="ChkIncludeTags" Content="태그" IsChecked="True" />
                <CheckBox x:Name="ChkIncludePrompt" Content="프롬프트" IsChecked="True" />
                <CheckBox x:Name="ChkIncludeNegative" Content="네거티브" IsChecked="True" />
            </StackPanel>

            <Border Height="1" Background="#33000000" Margin="0,8,0,0" />
            <TextBlock Text="썸네일 캐시" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="메모리 캐시 항목 수(개)" VerticalAlignment="Center" />
                <TextBox x:Name="ThumbCacheTextBox" Width="120" PlaceholderText="5000" />
                <Button Content="적용" Click="ApplyThumbCache_Click" />
                <Button Content="캐시 비우기" Click="ClearThumbCache_Click" />
            </StackPanel>
            <TextBlock x:Name="CacheStatusText" Foreground="Gray" />

            <Border Height="1" Background="#33000000" Margin="0,8,0,0" />
            <Button Content="인덱스 다시 만들기" Click="Reindex_Click" Width="180" />
            <TextBlock x:Name="StatusText" />
        </StackPanel>
    </ScrollViewer>
</Page>